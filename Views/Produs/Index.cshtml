@model IEnumerable<ShoesStore.Models.Produs>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/home.css" />

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nume_Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id_Brand)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume_Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Brand)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Produs">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id_Produs">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_Produs">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
